<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#00000000">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.00 PM"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        android:visibility="visible"
        android:textColor="@color/black"
        android:fontFamily="@font/op_r"
        android:textSize="12sp"/>


    <LinearLayout
        android:id="@+id/receivedLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bot_avt"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/man"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/message_received">

            <TextView
                android:id="@+id/receivedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#fff" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/sentLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:minWidth="80dp"
        android:layout_gravity="end"
        android:background="@drawable/message_sent">

        <TextView
            android:id="@+id/sentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textColor="#fff"/>

    </LinearLayout>

</LinearLayout>
